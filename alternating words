#include <iostream>
using namespace std;

string to_alternating_case(const string& str)
{
 string words;
  for (int i=0; i<str.length(); i++)
    {
    if(islower(str[i]))
      {
      words+=toupper(str[i]);
    }
    else if(isupper(str[i]))
      {
      words+=tolower(str[i]);
    }
    else
      words+=str[i];
  }
  return words;
  
}
